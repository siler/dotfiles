[user]
	name = Shane Iler
	email = sriler@gmail.com
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[http]
	sslVerify = false
[push]
	default = simple
[alias]
	root = !pwd
	ctags = !.git/hooks/ctags
	lc = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(blue)%h%C(reset) %C(green)%ar%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
	la = log --graph --abbrev-commit --decorate --all --format=format:'%C(blue)%h%C(reset) %C(green)%ar%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
	ld = log --graph --abbrev-commit --decorate --all --simplify-by-decoration --format=format:'%C(blue)%h%C(reset) %C(green)%ar%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'

[init]
	templatedir = ~/.git_template
[core]
	pager = less +F +X
	pager = less -F -X
