out_to_console yes
out_to_x no
background no
update_interval 1
update_interval_on_battery 10
total_run_times 0
use_spacer left

TEXT
${cpu cpu0}% - ${loadavg 1} :: $memperc% ($mem) ${if_match "${exec cat /sys/class/power_supply/BAT1/status}" == "Discharging"}:: ${battery_short BAT1} (${battery_time BAT1}) $endif${if_match "${exec cat /sys/class/power_supply/BAT1/status }" == "Charging"}:: ${battery_short BAT1} (${battery_time BAT1}) $endif:: ${time %-m/%-d %-H:%M}
